  "keywords": [
    "slack",
    "bolt",
    "light-rag"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@ai-sdk/openai": "^2.0.28",
    "@slack/bolt": "^4.5.0",
    "ai": "^5.0.40",
    "axios": "^1.7.7",
    "dotenv": "^16.4.5",
    "pg": "^8.16.3",
    "zod": "^4.1.8"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "@types/node": "^24.6.1",
    "typescript": "^5.9.3"
  }
}

{
  "name": "slack-bot",
  "version": "1.0.0",
  "description": "AI-enabled Slack bot powered by LightRAG",
  "type": "module",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "check": "npx tsc --allowJs --noEmit app.js listeners/**/*.js services/**/*.js",
    "lint": "npx @biomejs/biome check app.js listeners/ services/",

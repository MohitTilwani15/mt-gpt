{
  "compilerOptions": {
    "allowUnusedLabels": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "module": "ES2020",
    "moduleResolution": "Bundler",
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "outDir": "dist",
    "removeComments": false,
    "sourceMap": true,
    "target": "ES2020",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "pretty": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "baseUrl": ".",
    "paths": {
      "@workspace/ui/*": ["../../packages/ui/src/*"],
      "@workspace/chat": ["../../packages/chat/src/index.ts"],
      "@workspace/chat/*": ["../../packages/chat/src/*"],
      "@workspace/api": ["../../packages/api/src/index.ts"],
      "@workspace/api/*": ["../../packages/api/src/*"]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "ts-node": { 
    "compilerOptions": {
      "module": "commonjs"
    },
    "files": true 
  }
}
